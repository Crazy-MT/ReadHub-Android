<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maotong.readhub.ui.activity.ReadHubActivity"
    tools:showIn="@layout/activity_read_hub"
    android:paddingTop="?attr/actionBarSize">


    <com.handmark.pulltorefresh.library.extras.viewpager.PullToRefreshViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:ptrDrawableEnd="@drawable/refresh_end"
        app:ptrDrawableStart="@drawable/refresh_start"
        app:ptrMode="both"
        app:ptrScrollingWhileRefreshingEnabled="false" >

    </com.handmark.pulltorefresh.library.extras.viewpager.PullToRefreshViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_height="2dp">

    </android.support.design.widget.TabLayout>

</LinearLayout>

